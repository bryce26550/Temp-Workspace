<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CHAT!</title>

</head>

<body>
    <style>
        #nameList {
            float: left;
            border: 2px double black;
            height: 930px;
            width: 185px;
            overflow-y: auto;
        }

        #chatBox {
            background-color: white;
            margin-left: 200px;
            height: auto;
            overflow-y: scroll;
            overflow-x: auto;
            display: list-item;
        }

        #messageBox {
            background-color: white;
            width: 675px;
            height: 25px;
            position: absolute;
            float: right;
            margin-top: 900px;
            margin-left: 9px;

        }

        #Send {
            background-color: white;
            float: right;
            height: 30px;
            width: 55px;
            margin-top: 900px;
        }
    </style>

    <div id="nameList"></div>
    <input type="text" id="messageBox">
    <button id="Send" onclick="messageBox()">Send</button>
    <div id="chatBox"></div>

    <script>
        const ws = new WebSocket("ws://localhost:3000")
        const name = `<%= name %>`

        ws.onopen = function () {
            ws.send(JSON.stringify({ name: name }));
        };

        ws.onmessage = function (message) {
            let mess = JSON.parse(message.data)
            console.log(mess);

            if (mess.list) {
                for (name in mess.list) {
                    document.getElementById("namelist").innerHTML += mess.list[name] + "<br>";
                }
            };

            if (mess.text) {
                document.getElementById("chatBox").innerHTML += mess.name + ": " + mess.text + "<br>";
            }
        };
        function sendMessage(event) {
            let inputMessage = document.getElementById("messageBox")
            ws.send(JSON.stringify({ name: name, text: inputMessage.value }))
        }

    </script>
</body>

</html>